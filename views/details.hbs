<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-clifford text-center pb-12">Destination Details</h1>
    
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <img 
                loading="eager" 
                src="{{destination.image}}" 
                alt="{{destination.name}}" 
                class="w-full h-96 object-cover" 
                style="object-position: center 33%;" 
                width="800" 
                height="384" 
                fetchpriority="high"
                decoding="async">
            <div class="p-8">
                <h2 class="text-3xl font-semibold text-gray-800 mb-4">{{destination.name}}</h2>
                <p class="text-gray-600 text-lg mb-6">{{destination.city}}</p>
                <p class="text-gray-700 leading-relaxed">{{destination.description}}</p>
            </div>
        </div>
        <div class="text-center mt-8">
            <a href="/list" class="inline-block bg-clifford text-white px-6 py-3 rounded-lg hover:bg-opacity-90 transition-colors">Back to List</a>
        </div>
    </div>
</div>
